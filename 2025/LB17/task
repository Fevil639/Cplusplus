#include <iostream>  // бібліотека для вводу/виводу (cout, cin)
#include <cmath>     // бібліотека для математики (sqrt)

using namespace std; // щоб не писати std:: перед cout, endl
// дозволяє використовувати cout, cin, endl без std::

bool isPrime(int num) // bool — тип, який повертає true або false
// isPrime — назва функції ("чи є число простим")
// num — параметр (число, яке перевіряється)
{
    if (num < 2)      // якщо число менше 2
    // прості числа — це числа більше або рівні 2
        return false; // повертаємо false — не просте число

    for (int i = 2; i <= sqrt(num); i++) 
    // цикл перебирає всі числа від 2 до квадратного кореня з num
    // int i = 2 — початок циклу
    // sqrt(num) — квадратний корінь з числа
    // i++ — збільшення лічильника на кожному кроці
    {
        if (num % i == 0) // якщо число ділиться на i без остачі
        // % — оператор остачі від ділення
        // == 0 — означає ділення націло
            return false; // знайдено дільник — число не просте
    }

    return true; // жодного дільника не знайдено — число просте
}

int main() // головна функція — з неї починається виконання програми
{
    for (int i = 0; i <= 21; i++) 
    // цикл від 0 до 21 включно
    // int i = 0 — початкове значення
    // i <= 21 — умова виконання
    // i++ — крок збільшення
    {
        if (isPrime(i))     // перевірка: якщо число i — просте
            cout << i << " "; // виводимо просте число з пробілом
    }

    cout << endl; // перехід на новий рядок після виводу чисел
    return 0;     // завершення програми — повідомлення про успішне виконання
}

