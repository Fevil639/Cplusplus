#include <iostream>                      // Підключаємо бібліотеку для вводу/виводу (наприклад, cout, endl)

using namespace std;                     // Дозволяє використовувати простір імен std без префіксу (наприклад, cout замість std::cout)

int main(void) {                         // Початок головної функції, з якої запускається програма

    int vector[] = { 3, -5, 7, 10, -4, 14, 5, 2, -13 };  // Оголошення одновимірного масиву з 9 цілих чисел

    int n = sizeof(vector) / sizeof(vector[0]);         // Обчислюємо кількість елементів у масиві: загальний розмір масиву / розмір одного елемента

    int* ptr = vector;                   // Оголошення вказівника ptr, який вказує на перший елемент масиву (vector — це ім’я масиву, що є вказівником)

    int* min_ptr = vector;              // Оголошуємо вказівник min_ptr, який також вказує на перший елемент — початково вважаємо його мінімальним

    int* end = vector + n;              // Вказівник end вказує на адресу, яка знаходиться одразу після останнього елемента масиву

    while (ptr < end) {                 // Поки вказівник ptr не дійшов до end (тобто ще не пройшли весь масив)
        if (*ptr < *min_ptr) {          // Якщо значення, на яке вказує ptr, менше, ніж те, на яке вказує min_ptr
            min_ptr = ptr;              // Оновлюємо min_ptr — тепер він вказує на новий мінімальний елемент
        }
        ptr++;                          // Переходимо до наступного елемента масиву (вказівник переміщається на одну позицію вперед)
    }

    cout << "The smallest item in the array is " << *min_ptr << endl; // Виводимо найменше знайдене значення, яке зберігається за адресою min_ptr

    return 0;                           // Завершення програми з кодом 0 — все виконано успішно
}
