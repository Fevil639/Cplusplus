#include <iostream>                   // Підключаємо бібліотеку для введення/виведення (використовується cout)
using namespace std;                 // Використовуємо простір імен std, щоб не писати std:: перед cout, endl тощо

// Перевантажена функція increment — версія з одним параметром
void increment(int &a) {             // Приймає змінну за посиланням, щоб змінити її значення
    a += 1;                          // Збільшує значення змінної на 1
}

// Перевантажена функція increment — версія з двома параметрами
void increment(int &a, int b) {      // Приймає змінну за посиланням і ще одне число
    a += b;                          // Збільшує змінну на значення другого параметра
}

int main(void) {                     // Точка входу в програму
    int var = 0;                     // Оголошення змінної var і ініціалізація її нулем
    for(int i = 0; i < 10; i++)      // Цикл, який виконується 10 разів (від 0 до 9)
        if(i % 2)                    // Якщо i непарне (залишок від ділення на 2 дорівнює 1)
            increment(var);          // Викликаємо функцію з одним аргументом → додаємо 1
        else                         // Інакше (тобто якщо i парне)
            increment(var, i);       // Викликаємо функцію з двома аргументами → додаємо значення i
    cout << var << endl;             // Виводимо фінальне значення var у консоль
    return 0;                        // Повертаємо 0 — стандартне завершення програми
}
